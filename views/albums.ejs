<%- include('./includes/header') %>
<div class="albums-container container-fluid">
    <!-- Albums -->
    <div class="row">
        <div class="col-sm-12">
            <h3>Albums</h3>
        </div>
        <% if (albums.length > 0) { %>
            <% for (let album of albums) { %>
                <div class="col-sm-4 col-lg-2">
                    <div class="thumbnail">
                        <a href="/album/<%= album.id %>">
                            <img src="/static/<%= album.imageUrl %>" class="img-responsive">
                        </a>
                        <div class="caption">
                            <h2><%= album.title %></h2>
                            <h4><%= album.artist %></h4>

                            <!-- View Details -->
                            <a href="/album/<%= album.id %>" class="btn btn-primary btn-sm" role="button">View Details</a>

                            <!-- Delete Album -->
                            <form action="/album/delete" method="post" style="display: inline;">
                                <input type="hidden" name="album_id" value="<%= album.id %>" />
                                <input type="hidden" name="back_url" value="<%= locals.songs ? '/' : '/album' %>" />
                                <button type="submit" class="btn btn-default btn-sm">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </button>
                            </form>

                            <!-- Favorite Album -->
                            <form action="/album/togglefav" method="post" style="display: inline;">
                                <input type="hidden" name="album_id" value="<%= album.id %>" />
                                <input type="hidden" name="back_url" value="<%= locals.songs ? '/' : '/album' %>" />
                                <button type="submit" class="btn btn-default btn-sm btn-favorite">
                                    <span class="glyphicon <%= album.isfavorite ? 'glyphicon-star' : 'glyphicon-star-empty' %>"></span>
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-sm-12">
                <br>
                <a href="/album/add">
                    <button type="button" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus"></span>&nbsp; Add an Album
                    </button>
                </a>
            </div>
        <% } %>
    </div>

    <!-- If user searches and there are songs -->
    <% if (locals.songs) { %>
        <div class="row">
            <div class="col-sm-12">
                <h3>Songs</h3>
            </div>
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Song Title</th>
                                    <th>Artist</th>
                                    <th>Audio File</th>
                                    <th>Album</th>
                                    <th>Favorite</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let song of songs) { %>
                                    <tr>
                                        <td><%= song.title %></td>
                                        <td><%= song.album.artist %></td>
                                        <td>
                                            <a target="_blank" href="<%= song.audioFile %>">
                                                <button type="button" class="btn btn-success btn-xs">
                                                    <span class="glyphicon glyphicon-play"></span>&nbsp; Play
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/album/<%= song.album.id %>">
                                                <img src="/static/<%= song.album.imageUrl %>" class="img-responsive" style="width: 20px; float: left; margin-right: 10px;" />
                                            </a>
                                            <a href="/album/<%= song.album.id %>"><%= song.album.title %></a>
                                        </td>
                                        <td>
                                            <form action="/song/togglefav" method="post" style="display: inline;">
                                                <input type="hidden" name="song_id" value="<%= song.id %>" />
                                                <input type="hidden" name="back_url" value="/" />
                                                <button type="submit" class="btn-link">
                                                    <span class="glyphicon <%= song.isfavorite ? 'glyphicon-star' : 'glyphicon-star-empty' %>"></span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

</div>
</body>
</html>
