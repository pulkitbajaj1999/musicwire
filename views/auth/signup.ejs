<%- include('../includes/header.ejs') %>
  <div class="container-fluid">
      <div class="row">
          <div class="col-sm-12 col-md-6">
              <div class="panel panel-default">
                  <div class="panel-body">
                      <h3>Register for an Account</h3>
                      <% if (locals.error_message) { %>
                          <p><strong><%= error_message %></strong></p>
                      <% } %>
                      <form class="form-horizontal" role="form" action="/auth/signup" method="post" enctype="multipart/form-data">
                        <!-- <input type="hidden" name="csrfmiddlewaretoken" value="4VH3fyKlKLiF9yzvmKV1o70h4cfmhSyC9zDdkabTk4HR1Wn5DzGmOkyaQ241f5ST"> -->
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <span class="text-danger small"></span>
                            </div>
                            <label class="control-label col-sm-2" for="song_title"><label for="id_username">Username:</label></label>
                            <div class="col-sm-10"><input type="text" name="username" id="id_username" required minlength="6" maxlength="50"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <span class="text-danger small"></span>
                            </div>
                            <label class="control-label col-sm-2" for="song_title"><label for="id_email">Email address:</label></label>
                            <div class="col-sm-10"><input type="email" name="email" id="id_email" pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" maxlength="100"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <span class="text-danger small"></span>
                            </div>
                            <label class="control-label col-sm-2" for="song_title"><label for="id_password">Password:</label></label>
                            <div class="col-sm-10"><input type="password" name="password" id="id_password" required minlength="8"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>
                  </div>
                  <div class="panel-footer">
                      Already have an account? <a href="/auth/login">Click here</a> to log in.
                  </div>
              </div>
          </div>
      </div>
  </div>
</body>
</html>

